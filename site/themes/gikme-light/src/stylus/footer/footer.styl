	width site-width
	margin 30px auto
	
	@media screen and (max-width: 999px)
		width 100%
		max-width content-width
		
	@media screen and (max-width: 759px)
		padding 0 0 0 30px
		
	@media screen and (max-width: 459px)
		padding 30px 0 0 30px
	
	&__link
		margin-right 30px
		
		@media screen and (max-width: 459px)
			display block