.trello-ui
    margin 20px 0

    &__message
        font-weight bold
        margin-bottom 20px

        &_status
            &_error
                color link-hover-color

    &__user-info
        margin 10px -5px

    &__avatar
        width 54px
        margin-left 5px

    &__logout
        display inline-block
        margin-left 10px
        vertical-align top

    &__lists-buttons
        margin 10px -5px

    &__list-content
        border 1px meta-color solid
        border-radius 3
        width 100%
        height 300px
        color font-color
