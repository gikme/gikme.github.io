.header
	width site-width
	margin auto
	padding 20px 0 0 0
	font-size 0
	
	&__logo
		display inline-block
		margin 0 20px 0 0 
		width 145px
		height 50px
		vertical-align middle
		
		&-link
			background url('../img/sprite.png')
			display inline-block
			text-indent -1000px
			overflow hidden
			width 145px
			height 50px
			transition opacity 350ms

			
			&:hover
				opacity .8
				transition opacity 0
				
			&:active
				opacity .5
				transition opacity 0
		
	&__menu
		display inline-block
		
		&-item
			@extend .link
			display inline-block
			padding 5px 10px
			margin 0 5px
			font-size content-fs
			
			&_active
				border 1px solid border-color
				border-radius 5px
				color font-color
				pointer-events none
 