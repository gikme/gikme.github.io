.header
	width site-width
	margin auto
	padding 20px 0 0 0
	font-size 0
	
	&__logo
		display inline-block
		margin 0 20px 0 0 
		background url('../img/sprite.png')
		width 145px
		height 50px
		overflow hidden
		text-indent -1000px
		vertical-align middle
		
	&__menu
		display inline-block
		
		&-item
			@extend .link
			display inline-block
			padding 5px 10px
			margin 0 5px
			font-size content-fs
			
			&_active
				border 1px solid border-color
				border-radius 5px
				color font-color
				pointer-events none
 