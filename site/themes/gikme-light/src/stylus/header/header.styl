.header
	width site-width
	margin auto
	padding 20px 0 0 0
	font-size 0
	
	@media screen and (max-width: 999px)
		width 100%
		max-width content-width
	
	&__logo
		display inline-block
		margin 0 20px 0 0 
		width 145px
		height 50px
		vertical-align middle
		
		@media screen and (max-width: 759px)
			margin-left 30px
		
		&-link
			background url('../img/sprite.png')
			display inline-block
			text-indent -1000px
			overflow hidden
			width 145px
			height 50px
			transition opacity 350ms

			
			&:hover
				opacity .8
				transition opacity 0ms
				
			&:active
				opacity .5
				transition opacity 0ms
		
	&__menu
		display inline-block
		
		@media screen and (max-width: 759px)
			margin-top 20px
			padding-left 20px
		
		&-item
			@extend .link
			display inline-block
			padding 5px 10px
			margin 0 5px
			font-size content-fs
			
			&_active
				border 1px solid border-color
				border-radius 5px
				color font-color