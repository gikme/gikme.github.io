.article
	background bg-content-color
	margin 40px 0 0 0
	padding 30px

	&:first-child
		margin 20px 0 0 0

	&__title
		margin 0
		font-size header-fs

	&__link
		text-decoration none
		color font-color

	&__image
		width 100%

	&__date
		font-size meta-fs
		color meta-color
		margin 0

	&__content
		margin-top 20px
		line-height 1.5

		@media screen and (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)
			font-size 16px
			line-height 1.3

		img
			max-width 100%

		a
			word-break break-word
			@extend .link

	&__footer
		margin-top 30px

	&__meta
		color meta-color
		font-size meta-fs
		margin 0

	&__tags
		margin 10px 0 0 -10px
		padding 0
		list-style none
		font-size 0

		&-item
			display inline-block
			margin 0 5px 5px 0

		&-link
			padding 3px 10px
			font-size meta-fs
			border 1px solid border-color
			display inline-block
			border-radius 20px
			transition color 350ms, background-color 350ms, box-shadow 350ms

			&:hover
				background-color border-color
				transition color 0ms, background-color 0ms, box-shadow 0ms

			&:active
				box-shadow 0 0 10px rgba(0,0,0,.2) inset
				transition color 0ms, background-color 0ms, box-shadow 0ms

	&__learn-more
		margin 10px 0
		line-height 38px

		&-link
			padding 10px 20px
			border-radius 5px
			border 1px solid border-color
			transition color 350ms, background-color 350ms, box-shadow 350ms

			&:hover
				background-color border-color
				transition color 0ms, background-color 0ms, box-shadow 0ms

			&:active
				box-shadow 0 0 10px rgba(0,0,0,.2) inset
				transition color 0ms, background-color 0ms, box-shadow 0ms

	&__comments
		display inline-block
		font-weight bold
		padding-left 27px
		text-decoration none
		color font-color
		position relative
		margin-left 20px
		transition opacity 350ms
		height 23px

		&:before
			content ''
			display inline-block
			position absolute
			top 9px
			left 0
			width 21px
			height 20px
			background url('../img/sprite.png')
			background-position -325px 0

		&:hover
			opacity .9
			transition opacity 0ms

		&:active
			opacity .5
			transition opacity 0ms
